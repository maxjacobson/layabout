%html
  %head
    %title= title
    %meta{:charset => 'utf-8'}
  %body{:'data-html' => body}
    %section
      .metadata
        %a{:href => url}
          â–¶
          = title
      .article
    %script{:src => 'https://code.jquery.com/jquery-2.1.3.min.js'}
    :coffeescript
      $ ->
        html = $("body").data("html")
        html = if ($body = $(html).find("body")).length
                 $body.html()
          else
            html
        $(".article").html(html)
    :sass
      body
        background: #86AFFF
        font-family: sans-serif
        font-size: 25px
        color: white
      section
        width: 500px
        margin: 5px auto
      a
        color: black
        &:hover
          color: grey
        text-decoration: none
        font-weight: bold
      img
        border-radius: 10px
        max-width: 100%
